@model A2ZPortal.Core.Entities.Master.SubModuleMaster

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form id="form" method="post" data-ajax="true" data-ajax-method="post"
      asp-action="PostCreate" asp-controller="SubModule" data-ajax-success="Success" data-ajax-begin="BeginRequest">
    <div class="box-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CreatedBy" type="hidden" />
                    <input asp-for="CreatedDate" type="hidden" />
                    <label asp-for="ModuleId">Module</label>
                    <select asp-for="ModuleId" class="form-control"
                            asp-items="@(new SelectList((IEnumerable<ModuleMaster>)ViewBag.Module,"Id","ModuleName"))">
                        <option value="">--Select One--</option>
                    </select>
                    <span asp-validation-for="ModuleId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SubModuleName">SubModule Name</label>
                    <input type="text" asp-for="SubModuleName" class="form-control" />
                    <span asp-validation-for="SubModuleName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AreaName">Area Name</label>
                    <input type="text" asp-for="AreaName" class="form-control" />
                    <span asp-validation-for="AreaName" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ControllerName">Controller Name</label>
                    <input type="text" asp-for="ControllerName" class="form-control" />
                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ActionName">Action Name</label>
                    <input type="text" asp-for="ActionName" class="form-control" />
                    <span asp-validation-for="ActionName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SortOrder">Sort Order</label>
                    <input type="number" asp-for="SortOrder" class="form-control" />
                    <span asp-validation-for="SortOrder" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="IconImagePath">Icon/Image Path</label>
                    <input type="text" asp-for="IconImagePath" class="form-control" />
                    <span asp-validation-for="IconImagePath" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success pull-right">
                <i class="fa fa-download"> &nbsp; Save</i>
            </button>
        </div>
        <div class="col-md-4">
            <button type="reset" class="btn btn-danger pull-left">Cancel</button>
        </div>
    </div>
</form>
