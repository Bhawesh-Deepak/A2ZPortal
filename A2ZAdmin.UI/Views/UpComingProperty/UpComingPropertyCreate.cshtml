@model A2ZPortal.Core.Entities.Property.UpComingPropertyDetail
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form id="form" method="post" data-ajax="true" data-ajax-method="post" enctype="multipart/form-data"
      asp-action="PostCreate" asp-controller="UpComingProperty" data-ajax-success="Success" data-ajax-begin="BeginRequest">
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="ImagePath" type="hidden" />
                    <input asp-for="CreatedBy" type="hidden" />
                    <input asp-for="CreatedDate" type="hidden" />
                    <label asp-for="PropertyName">Property Name</label>

                    <span class="text-danger"> * </span>
                    <input type="text" asp-for="PropertyName" class="form-control" />
                    <span asp-validation-for="PropertyName" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImagePath">Image</label>
                    <span class="text-danger"> * </span>
                    <input type="file" asp-for="ImagePath" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="VideoURL">Video URL</label>
                    <span class="text-danger"> * </span>
                    <input type="url" asp-for="VideoURL" class="form-control" />
                    <span asp-validation-for="VideoURL" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ProprtyDescription">Description</label>
                    <span class="text-danger"> * </span>
                    <textarea asp-for="ProprtyDescription" class="form-control"></textarea>
                    <span asp-validation-for="ProprtyDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success pull-right"><i class="fa fa-plus"> &nbsp; Save</i></button>
        <button type="reset" class="btn btn-danger"> <i class="fa fa-refresh"> &nbsp; Cancel</i></button>
    </div>

</form>
