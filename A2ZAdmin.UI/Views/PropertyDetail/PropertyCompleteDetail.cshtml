@model A2ZPortal.Core.ViewModel.PropertyList.PropertyDetailListVm
@{
    var images = Model.PropertyImages.ToList();
    var aminities = Model.Amenities.ToList();

}
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKGAp4SyPy1qnUqz5gMygSOzO8Qm2kNvY&callback=initMap&libraries=&v=weekly"
        async></script>

<style>
    .users-list > li img {
        border-radius: 2%;
        max-width: 100%;
        height: auto;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Property Complete Detail</h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="box-body">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="PropertyName">Property Name</label>
                                <input type="text" asp-for="PropertyName" class="form-control" readonly />

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="PropertyDescription">Property Description</label>
                                <input type="text" asp-for="PropertyDescription" class="form-control" readonly />

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input asp-for="Id" type="hidden" />
                                <label asp-for="LocationName">Location</label>
                                <input type="text" asp-for="LocationName" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="SubLocationName">Sub Location</label>
                                <input type="text" asp-for="SubLocationName" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="BedRooms">Bed Room</label>
                                <input type="text" asp-for="BedRooms" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="BathRooms">Bath Room</label>
                                <input type="text" asp-for="BedRooms" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="RoomName">Additional Room</label>
                                <input type="text" asp-for="RoomName" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FurnishingStatus">Furnishing Status</label>
                                <input type="text" asp-for="FurnishingStatus" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Age">Age Of Property</label>
                                <input type="text" asp-for="Age" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TotalParking">No. Of Parking</label>
                                <input type="text" asp-for="Age" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Facing">View Facing</label>
