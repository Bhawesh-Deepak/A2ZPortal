@model A2ZPortal.Core.Entities.Master.Location

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form id="form" method="post" data-ajax="true" data-ajax-method="post"
      asp-action="PostCreate" asp-controller="LocationMaster" data-ajax-success="Success" data-ajax-begin="BeginRequest">
    <div class="box-body">

        <div class="col-md-12">
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
                <input asp-for="CreatedBy" type="hidden" />
                <input asp-for="CreatedDate" type="hidden" />
                <label asp-for="LocationName">Location Name</label>
                <input type="text" asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>

        </div>


    </div>

    <div class="box-footer">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success pull-right">
                <i class="fa fa-download"> &nbsp; Save</i>
            </button>
        </div>
        <div class="col-md-4">
            <button type="reset" class="btn btn-danger pull-left">Cancel</button>
        </div>
    </div>
</form>
