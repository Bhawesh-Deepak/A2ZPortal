@model A2ZPortal.Core.Entities.Master.Location

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form id="form" method="post" data-ajax="true" data-ajax-method="post"
      asp-action="PostCreate" asp-controller="LocationMaster" data-ajax-success="Success" data-ajax-begin="BeginRequest">
    <div class="box-body">

        <div class="col-md-12">
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
                <input asp-for="CreatedBy" type="hidden" />
                <input asp-for="CreatedDate" type="hidden" />
                <label asp-for="LocationName">Location Name <span class="text-danger"> * </span></label>
                <input type="text" asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>

        </div>


    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

        <button type="submit" class="btn btn-success pull-right">
            <i class="fa fa-plus"> &nbsp; Save</i>
        </button>

        <button type="reset" class="btn btn-danger"> <i class="fa fa-refresh"> &nbsp; Cancel</i></button>

    </div>
</form>
