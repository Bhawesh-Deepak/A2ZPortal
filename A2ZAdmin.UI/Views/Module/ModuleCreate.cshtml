@model A2ZPortal.Core.Entities.Master.ModuleMaster

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<div class="col-md-12">
    <div class="box box-primary">
        <form id="form" method="post" data-ajax="true" data-ajax-method="post"
              asp-action="PostCreate" asp-controller="Module" data-ajax-success="Success">
            <div class="box-body">

                <div class="col-md-4">
                    <div class="form-group">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <label asp-for="ModuleName">Module Name</label>
                        <input type="text" asp-for="ModuleName" class="form-control" />
                        <span asp-validation-for="ModuleName" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="SortOrder">Sort Order</label>
                        <input asp-for="SortOrder" class="form-control" />
                        <span asp-validation-for="SortOrder" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="box-footer">
                <div class="col-md-8">
                    <button type="submit" class="btn btn-success pull-right">
                        <i class="fa fa-download"> &nbsp; Save</i>
                    </button>
                </div>
                <div class="col-md-4">
                    <button type="reset" class="btn btn-danger pull-left">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>
