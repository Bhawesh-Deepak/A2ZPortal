@model A2ZPortal.Core.Entities.Customers.CustomerDetails

<style>
    .contact-box.container.col-md-4 {
        position: fixed;
        right: -500px;
        top: 0px;
        background-color: aliceblue;
        z-index: 999;
        height: 100%;
    }

    .contact-box .Lgn h2 {
        margin-left: 20px;
    }


    .fgtpwd {
        font-size: 16px;
    }

    .mt-3 {
        margin-top: 30px;
    }

    .mt-2 {
        margin-top: 20px;
    }

    /* .btn-primary {
                    background-color: #5e8cd7;
                }
        */
    .lgnbtn {
        width: 100%;
        border: none;
        font-weight: 500;
    }

    .btnsign {
        width: 100%;
        border-radius: 21px;
        border: none;
        border-bottom: 2px solid #bfb5b5;
        border-left: 1px solid #e7f0f9;
        border-right: 1px solid #e7f0f9;
        border-top: 1px solid #e7f0f9;
        color: #9b958b;
        font-weight: 600;
        font-family: inherit;
    }

    .btnlink {
        color: #000;
        font-weight: 500;
    }

        .btnlink a {
            color: #7b0211;
        }
</style>

<form method="POST" asp-action="Login" asp-controller="CustomerDetail" class="form-horizontal mt-3 p-4   custom-block" style="display: contents;">

    <section>
        <div class="contact-box container col-md-4">
            <div class="row">
                <div class="col-md-10 mt-5 Lgn">
                    <h2>Login</h2>
                </div>
                <div class="col-md-2 mt-5 cls">
                    <i class="fa fa-close" onclick="hidemenu()"></i>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 offset-md-1 mt-2">
                    <label>Email Id/ Mobile Number</label>
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="text" class="form-control" asp-for="CustomerPhone" placeholder="Customer Phone *" required>

                </div>

                <div class="col-md-10 offset-md-1 mt-2">
                    <label>Password</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password *" required>

                </div>


                <div class="col-md-10 offset-md-1 mt-2">
                    <span class="fgtpwd">Forget Password?</span>
                </div>

                <div class="col-md-10 offset-md-1 mt-3">
                    <button type="submit" class="btn btn-primary mb-3 btn-block">Login</button>
                </div>

                <div class="col-md-10 offset-md-1 mt-2 text-center">
                    <a class="btnlink"> <span>Use OTP to Login</span></a>
                </div>

                <div class="col-md-10 offset-md-1 mt-2" style="text-align:center">
                    <span>or</span>
                </div>

                <div class="col-md-10 offset-md-1 mt-2">
                    <button type="submit" class="btn btn-primary mb-3 btnsign btn-block">Signing with google</button>
                </div>
                <div class="col-md-10 offset-md-1 text-center mt-2 btnlink">
                    <h5>Don't have an account? <a asp-action="Register" asp-controller="CustomerDetail">Register Now</a></h5>
                </div>

            </div>
        </div>
    </section>
</form>

<script>
    function hidemenu() {
        debugger;
        $(".contact-box.container.col-md-4").animate({ right: '-500px' });
        $(".contact-box.container.col-md-4").css({

            "-webkit-transform": "translateX(10px)",
            "-moz-transform": "translateX(10px)",
            "-ms-transform": "translateX(10px)",
            "transform": "translateX(10px)",
            "display": "block"
        })
    }
    function SubmitContact() {
        debugger;
        $(".contact-box.container.col-md-4").animate({ right: '0px' });
        $(".contact-box.container.col-md-4").css({

            "-webkit-transform": "translateX(10px)",
            "-moz-transform": "translateX(10px)",
            "-ms-transform": "translateX(10px)",
            "transform": "translateX(10px)",
            "display": "block"
        })
    }
</script>
