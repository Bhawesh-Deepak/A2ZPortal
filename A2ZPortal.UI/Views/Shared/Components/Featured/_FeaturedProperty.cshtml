@model IEnumerable<A2ZPortal.Core.ViewModel.PropertyDetail.FeaturedPropertyVm>
<div class="container-boxed max">
    <div class="noo-vc-row row " style=" padding-top: 60px; padding-bottom: 60px;">
        <div class="noo-vc-col col-md-12 ">
            <div class="noo-text-block">
                <h2 style="text-align: center;"><strong>Our Featured Exclusive</strong></h2>
                <p style="text-align: center;">Choose from different templates and lay them out, full-width or boxed, grid or listed.</p>
            </div>
        </div>
        <div class="noo-vc-col col-md-12 ">
            <div class="recent-properties">
                <div class="properties grid">
                    <div class="noo-property-compare">
                        <form style="display: none" method="POST" 
                              action="http://wp.nootheme.com/citilights/compare-listings/"
                              class="submit-compare-612a0e9320ba3">
                            <h3 class="title-compare">
                                Compare Property
                            </h3>
                            <div class="list-compare"></div>
                            <input type="submit" name="submit-compare" value="Compare" />
                        </form>
                    </div>
                    <div class="properties-content">
                        <div class="property-exclusives">
                            <div class="exclusives-content">
                                @{
                                    int counter = 0;
                                    foreach (var data in Model)
                                    {
                                        counter++;
                                        <div class="exclusive-items">
                                            <article>
                                                <div class="featured-style-2">
                                                    <div class="fp-style-2--thumb">
                                                        <a class="content-thumb" href="properties/ava-high-line/index.html">
                                                            <img width="370" height="300" src="@data.ImagePath"
                                                                 class="attachment-property-thumb size-property-thumb wp-post-image" alt="" loading="lazy" />
                                                        </a>
                                                        <div class="content-thumb-overlay">
                                                            <div class="property-action">
                                                                <div class="action-container">
                                                                    <div class="property-sharing sharing612a0e932491d">
                                                                        <div class="property-share hidden-print clearfix">
                                                                            <a href="#share" data-toggle="tooltip" data-placement="bottom" data-trigger="hover" class="fa fa-facebook" title="Share on Facebook"
                                                                               onclick="window.open('http://www.facebook.com/sharer.php?u=@data.ImagePath', 'popupFacebook', 'width=650,height=270,resizable=0, toolbar=0, menubar=0, status=0, location=0, scrollbars=0'); return false;">
                                                                            </a>
                                                                            <a href="#share" class="fa fa-twitter" title="Share on Twitter"
                                                                               onclick="window.open('https://twitter.com/intent/tweet?text=@data.PropertyName;url=@data.ImagePath', 'popupTwitter', 'width=500,height=370,resizable=0, toolbar=0, menubar=0, status=0, location=0, scrollbars=0'); return false;">
                                                                            </a>
                                                                            <a href="#share" class="fa fa-google-plus" title="Share on Google+"
                                                                               onclick="window.open('https://plus.google.com/share?url=@data.ImagePath', 'popupGooglePlus', 'width=650,height=226,resizable=0, toolbar=0, menubar=0, status=0, location=0, scrollbars=0'); return false;">
                                                                            </a>
                                                                            <a href="#share" class="fa fa-pinterest" title="Share on Pinterest"
                                                                               onclick="window.open('http://pinterest.com/pin/create/button/?url=@data.ImagePath', 'popupPinterest', 'width=750,height=265,resizable=0, toolbar=0, menubar=0, status=0, location=0, scrollbars=0'); return false;">
                                                                            </a>
                                                                            <a href="#share" class="fa fa-linkedin" title="Share on LinkedIn"
                                                                               onclick="window.open('http://www.linkedin.com/shareArticle?mini=true&amp;url=@data.ImagePath', 'popupLinkedIn', 'width=610,height=480,resizable=0, toolbar=0, menubar=0, status=0, location=0, scrollbars=0'); return false;">
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                    <i title="Compare" data-user="0" data-id="@counter" data-action="compare" data-thumbnail="@data.ImagePath" data-div="submit-compare-612a0e9320ba3" class="property-action-button fa fa-plus compare-5939" aria-hidden="true"></i>
                                                                    <i title="Add to favorites" data-user="0" data-id="@counter" data-action="favorites" data-status="add_favorites" data-url="http://wp.nootheme.com/citilights/my-favorites/" class="property-action-button fa fa-heart-o" aria-hidden="true"></i>
                                                                    <i title="Share" data-user="0" data-id="@counter" data-action="sharing" data-class="sharing612a0e932491d" class="property-action-button fa fa-share-alt" aria-hidden="true"></i>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="fp-style-2--wrap">
                                                        <div>
                                                            <span class="fp-style-2--price">
                                                                <span class="amount">
                                                                    @data.Price
                                                                </span>
                                                                @if (data.PropertyType == "Rent")
                                                                {
                                                                    <span>Per Month</span>
                                                                }
                                                            </span>
                                                            <div class="fp-style-2--title">
                                                                <h4>
                                                                    <a href="properties/ava-high-line/index.html" title="AVA High Line">
                                                                        @data.PropertyName
                                                                    </a>
                                                                </h4>
                                                                <small class="fp-style-2--address">
                                                                    <i class="fa fa-map-marker"></i> @data.PlaceAddress
                                                                </small>
                                                            </div>
                                                            <div class="fp-style-2--excerpt">
                                                                <p>@data.Description</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="fp-style-2--summary">
                                                        <div class="property-detail">
                                                            <div class="area">
                                                                <span class="property-meta-icon"
                                                                      style="background-image: url(wp-content/uploads/2019/11/size-icon_ccd251439ef2512942b64d525ced79fe.png);">
                                                                </span><span class="property-meta">@data.TotalArea</span>
                                                            </div>
                                                            <div class="bedrooms">
                                                                <span class="property-meta-icon"
                                                                      style="background-image: url(wp-content/uploads/2019/11/bedroom-icon_92be012355310366e0bf07c8a41e35fe.png);"></span>
                                                                <span class="property-meta">@data.BedRooms</span>
                                                            </div>
                                                            <div class="bathrooms">
                                                                <span class="property-meta-icon" style="background-image: url(wp-content/uploads/2019/11/bathroom-icon_ffc5ba8874014ad0a7fcc5aa3b8acd57.png);"></span>
                                                                <span class="property-meta">@data.BathRooms</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                    <div class="pagination list-center">
                        <span aria-current="page" onclick="GetViewComponent(1, this)" class="page-numbers">1</span>
                        <a class="page-numbers" onclick="GetViewComponent(2, this)">2</a>
                        <a class="page-numbers" onclick="GetViewComponent(3, this)">3</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function GetViewComponent(id, eData) {
        $.get("/Home/FeaturedProperty", { pageIndex: id }, function (data) {
            $("#divData").html(data);
        }).done(function () {
            $(eData).addClass("Current");
        })
    }

</script>
