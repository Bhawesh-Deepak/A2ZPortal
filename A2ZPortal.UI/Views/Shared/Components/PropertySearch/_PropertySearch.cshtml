@model IEnumerable<A2ZPortal.Core.Entities.Master.BedRoom>
<style>
    .modal-backdrop {
        position: initial;
        top: 0;
        left: 0;
        z-index: 1040;
        width: 100vw;
        height: 100vh;
        background-color: #000;
    }

    .modal-open .modal {
        overflow-x: hidden;
        overflow-y: auto;
        background: #a31e2e;
    }
</style>

 
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center pt-5">
                <div class="col-md-6 offset-md-3 border mt-4">
                     
                    <form class="form-inline" action="~/PropertyDetails/Index" method="get" role="search">
                        <div class="col-md-12 mt-4">
                            <input id="location" name="location" type="text" class="form-control" autocomplete="on" placeholder="Type state, city, area or address">
                            <input type="hidden" id="LocationId" name="LocationId" />
                        </div>
                        <div class="col-lg-6 mt-3">
                            <select data-placeholder="All Status" name='status' id='ex-1' class='js-example-basic-single form-control'
                                    asp-items="@(new SelectList((IEnumerable<A2ZPortal.Core.Entities.Master.PropertyStatusModel>)ViewBag.PropertyStatus,"Id","PropertyStatus"))">
                                <option value="" selected='selected'>All Status</option>
                            </select>

                        </div>
                        <div class="col-lg-6 mt-3">
                            <select data-placeholder="All Type" name='category' id='ex-2' class='js-example-basic-single form-control'
                                    asp-items="@(new SelectList((IEnumerable<A2ZPortal.Core.Entities.Master.PropertyType>)ViewBag.PropertyType,"Id","PropertyTypeName"))">
                                <option value="" selected='selected'>All Type</option>
                            </select>

                        </div>
                        <div class="col-lg-6 mt-3">
                            <select class="js-example-basic-single form-control" id="ex-3" name="bedrooms" data-placeholder="All Bedrooms"
                                    asp-items="@(new SelectList((IEnumerable<A2ZPortal.Core.Entities.Master.BedRoom>)ViewBag.BedRoom,"Id","BedRooms"))">
                                <option value="" selected='selected'>All Bed Rooms</option>
                            </select>

                        </div>
                        <div class="col-lg-6 mt-3">
                            <select id="ex-4" class="js-example-basic-single form-control" name="bathrooms" data-placeholder="All Bathrooms"
                                    asp-items="@(new SelectList((IEnumerable<A2ZPortal.Core.Entities.Master.BathRoom>)ViewBag.BathRoom,"Id","BathRooms"))">
                                <option value="" selected='selected'>All Bath Rooms</option>
                            </select>

                        </div>
                        <div class="col-lg-12 more mt-3">
                            <a href="" data-toggle="modal" data-target="#myModal">More Options</a>
                        </div>
                        <div class="col-lg-4 offset-lg-4 mt-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-block btn-sm" ><i class="fa fa-search"></i> Search</button>
                        </div>
                        <div class="modal" id="myModal" tabindex="-1" role="dialog" style="opacity:2;margin-top:100px">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4>Choose among these options</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            @foreach (var item in ViewBag.Amenities)
                                            {
                                                <div class="col-md-12">
                                                    <label class="checkbox-label" for="@item.AmenitiesName" style="text-align:left !important">
                                                        <input type="checkbox" value="@item.Id" class="" name="Amenities" id="@item.AmenitiesName">&nbsp;@item.AmenitiesName
                                                    </label>
                                                </div>
                                            }

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success"><i class="fa fa-search"></i> Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col-lg-6 offset-lg-3 mt-1">
                        <div class="d-lg-flex justify-content-between">
                            <a asp-controller="Sale" asp-action="Index" class="btn btn-success mt-3">Property For Sale</a>
                            @*<a asp-controller="Rental" asp-action="Index" class="btn btn-success mt-3">Property For Rent</a>*@
                            <a asp-controller="Sale" asp-action="Index" class="btn btn-success mt-3">Off Plan</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
 
<script>
    $(function () {
        

        $("#location").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Home/Search",
                    type: "POST",
                    dataType: "json",
                    data: { prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.locationName,
                                value: item.id,
                                id: item.id
                            };
                            
                        }));
                    },
                });
            },
           
            select: function (event, ui) {
                debugger;
                $("#location").val(ui.item.label);
                $("#LocationId").val(ui.item.value);
                 
                return false;
            }
        });
    });
</script>